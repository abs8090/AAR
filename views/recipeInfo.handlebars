
<form id="form_comment" method="PATCH">
<h1 id="rsid">{{this.id}}</h1>
<h2 id="name">Recipe Name: {{name}}</h2>

<h2>photo:</h2>
<img id="recipeImg" src="{{this.imagePath}}">

ingredients:<ul id="ingss">
{{#each this.ingss as |ingss|}}
  <li>
    <h5>Name: {{ingss.name}}</h5> 
    <h5>Quantity: {{ingss.quantity}}</h5>
  </li>
{{/each}}
</ul>

<h5 id="servings">Servings: {{this.servings}}</h5>
<h5 id="chef">Chef: {{this.chef}}</h5>
<h5 id="time">Time: {{this.time}} Minutes</h5>
<h5 id="rating">Rating: {{this.rating}}</h5>

Steps:<ol id="step">
{{#each this.steps as |step|}}
  <li>
    {{step.}}
  </li>
{{/each}}
</ol>

<label for="ratingList">Rating: </label>
<select id="ratingList">
  <option value=0>rate recipe:</option>
      <option value=1>1</option>
      <option value=2>2</option>
      <option value=3>3</option>
      <option value=4>4</option>
      <option value=5>5</option>
  </select><br>

Comments:<ol id="comments">
{{#each this.comments as |comment|}}
  <li>
    <h5>Username: {{comment.username}}</h5> 
    <h5>Comment: {{comment.comment}}</h5>
  </li>
{{/each}}
</ol>
    <label>Make a comment:</label>
    <input type = "text" name = "comment" id = "comment"><br>
    <input type = "submit" value = "submit" id="submitComment"/><br>

<div id="share-buttons">

    <!-- Facebook -->
    <a href="http://www.facebook.com/sharer.php?u=" target="_blank">
        <img src="https://simplesharebuttons.com/images/somacro/facebook.png" alt="Facebook" />
    </a>

  <!-- Twitter -->
  <a href="https://twitter.com/intent/tweet?button_hashtag=share&ref_src=twsrc%5Etfw" class="twitter-hashtag-button" data-text="I just uploaded a recipe to the AAR Recipe Database! Share your own at https://localhost:3000" data-show-count="false">Tweet</a>
  <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

</div>

</form>
<script type = "text/javascript" src = "/public/recipeInfo.js"></script>