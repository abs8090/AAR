<body class="form">

    <h1>Upload a Recipe</h1>
    <form class="upload-form" name="form_id" id="form_id" method = "POST" action="/upload" enctype="multipart/form-data">
      
      <label for="recipeName">Recipe Name:</label>
      <input type = "text" name = "recipeName" id = "recipeName"><br>
      
      

      <div class="container">
        <label for="myImage">Upload an image:</label>
      <input name="myImage" type="file"><br>
    </div>
      

      <label for="ingredients">Ingredients: (enter one ingredients at a time, then click the button below to add)</label>
      <input type = "text" name = "ingredients" id = "ingredients"><br>
      <label for="quantity">Quantity of Ingredients</label>
      <input type = "text" name = "quantity" id = "quantity"><br>
      <input type = "button" class="btn-default" value = "add ingredient" id="checkIng" /><br>
      <ol id="ingList"></ol>

      <label for="steps">Steps: (enter one step at a time, then click the button below to add)</label>
      <input type = "text" name = "steps" id = "steps"><br>
      <input type = "button" class="btn-default" value = "add step" id="checkStep" /><br>
       <ol id="stepList"></ol>

      <label for="chef">Chef (optional):</label>
      <input type = "text" name = "chef" placeholder = "Example: Rachel Ray" id = "chef"><br>


       

      <label for="serving">Servings:</label>
        <select id="serving">
        <option value="0">Select Servings:</option>
        <option value="2 people or less">2 people or less</option>
        <option value="4 people or less">4 people or less</option>
        <option value="8 people or less">8 people or less</option>
        <option value="12 people or more">12 people or more</option>

      </select><br>


      <label for="category">Category:</label>
      <select id="categories">
        <option value="0">Select Category:</option>
        <option value="breakfast">breakfast</option>
        <option value="lunch">lunch</option>
        <option value="dinner">dinner</option>
        <option value="snack">snack</option>

      </select><br>

      <label for="timeList">Time:</label>

      <select id="timeList">
        <option value=0>Select Time</option>
        <option value=5>5 min or less</option>
        <option value=10>10 min or less</option>
        <option value=15>15 min or less</option>
        <option value=20>20 min or less</option>
        <option value=25>25 min or less</option>
        <option value=30>30 min or less</option>
        <option value=35>35 min or less</option>
        <option value=40>40 min or less</option>
        <option value=45>45 min or less</option>
        <option value=50>50 min or less</option>
        <option value=55>55 min or less</option>
        <option value=60>60 min or more</option>

      </select><br>

      <label for="ratingList">Rating: </label>
      <select id="ratingList">
        <option value=0>rate recipe:</option>
        <option value=1>1</option>
        <option value=2>2</option>
        <option value=3>3</option>
        <option value=4>4</option>
        <option value=5>5</option>

      </select><br>
      
      <input type = "submit" value = "submit" id="displayObj"/><br>
      <input type="button" class="btn-default" onclick="location.href='/search';" value="go to search page" />
      <input type="button" class="btn-default" onclick="location.href='/logout';" value="Log Out" />

    </form>
    </body>


  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
